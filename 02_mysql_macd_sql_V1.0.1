conn_tolocal = create_engine("mysql+pymysql://root:root@127.0.0.1/stocks?charset=utf8")
for i in range(0,cursor_stock_basic):
    num = 0
    sql_code = data_stock_basic['ts_code'][i]
    sql_macd_trade_date = "select ts_code,trade_date,macd from daily_macd where \
    ts_code='{code}'   \
    order by trade_date desc limit 30;".format(code=sql_code)
    data_macd_trade_date = pd.read_sql(sql_macd_trade_date, con=conn)
    #print('I=',i,'记录为：',data_macd_trade_date)

    if data_macd_trade_date['trade_date'][0]=='20190930':#此处时间值为数据表中采集数据的最新值，后期优化参数
        for j in range(0,data_macd_trade_date['macd'].count()):
            if data_macd_trade_date['macd'][j]<0:
                num+=1   #值小于0计数器加1继续循环
                continue
            else:        #值大于0计数器退出
                break
        data_macd_trade_date['num'] = num
        #print(data_macd_trade_date.head())
    if num>=1:#天数，后期优化为变量参数引入
        data_macd_trade_date.head(1).to_sql('macd_day_signal',conn_tolocal,index=False,if_exists='append')
